# Email Configuration (Required for authentication features)
# For Gmail, use: smtp.gmail.com
# For SendGrid, use: smtp.sendgrid.net
EMAIL_HOST=smtp.example.com

# Common ports: 587 (TLS), 465 (SSL), 25 (unencrypted)
EMAIL_PORT=587

# Your email account username (often the full email address)
EMAIL_HOST_USER=your-email@example.com

# Your email account password or app-specific password
# For Gmail: Use an App Password (https://support.google.com/accounts/answer/185833)
# For SendGrid: Use your API key
EMAIL_HOST_PASSWORD=your-password-here

# Whether to use TLS encryption (recommended: True)
EMAIL_USE_TLS=True

# The email address that appears in the "From" field
DEFAULT_FROM_EMAIL=noreply@skol.example.com

# Redis Configuration (Already in use)
REDIS_HOST=localhost
REDIS_PORT=6379
